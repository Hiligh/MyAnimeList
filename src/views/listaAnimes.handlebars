<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>MiruYumo - Lista de Animes</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/listaAnimes.css">
</head>
<body data-idusuario="{{infoUsuario.IDUsuario}}">

  <!-- Container Principal -->
  <div class="container m-0">
    <div class="row">

      <!-- Sidebar -->
      <div class="col-md-3 sidebar d-flex flex-column">
        <div class="d-flex justify-content-center align-items-center mt-4">
          <img src="../assets/17004.png" alt="Imagem do Usuário" class="user-img">
        </div>
        <div id="usernameBtn" class="mt-5 mb-5">
          {{infoUsuario.Nome}}
        </div>

        <ul class="mt-5">
          <li>
            <a href="/paginaPrincipal" class="btn-31 mb-2 btn-block">
              <span class="text-container">
                <span class="text">Página Principal</span>
              </span>
            </a>
          </li>
          <li>
            <a href="#" id="linkListasAnimes" class="btn-31 mb-2 btn-block">
              <span class="text-container">
                <span class="text">Listas Animes</span>
              </span>
            </a>
          </li>
          <li>
            <a href="#" id="linkListasMangas" class="btn-31 mb-2 btn-block">
              <span class="text-container">
                <span class="text">Listas Mangás</span>
              </span>
            </a>
          </li>
          <li>
            <a href="/logout" class="btn-31 mb-2 btn-block">
              <span class="text-container">
                <span class="text">Sair da Conta</span>
              </span>
            </a>
          </li>
        </ul>
      </div>

      <!-- Main Content - Lista de Animes -->
      <div class="col-md-9">
        <div class="col-md-12 pt-3" id="divListaAnimes">
          <h2 class="text-center">Listas de Animes</h2>
        </div>

        <!-- Botão para abrir o modal de criação de lista -->
        <div class="row mt-5 justify-content-center">
          <div class="col-md-6 text-center">
            <button class="btn btn-secondary btn-block" data-toggle="modal" data-target="#criarListaModal">Criar nova lista</button>
          </div>
        </div>

        <!-- Modal para criar uma nova lista -->
        <div class="modal fade" id="criarListaModal" tabindex="-1" aria-labelledby="criarListaLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="criarListaLabel">Criar Nova Lista</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <input type="text" id="nomeLista" class="form-control" placeholder="Nome da lista">
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="criarListaBtn">Criar Lista</button>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>

  </div>

  <!-- Incluindo o JavaScript do Bootstrap e o script principal -->
  <script src="/js/paginaListaAnime.js"></script>
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>