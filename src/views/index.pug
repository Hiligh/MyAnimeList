doctype html
html(lang="pt-br")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title MiruYomuHub - Home

    //- CSS Home
    link(rel="stylesheet", href="/css/style.css")

    //- Bootstrap CSS
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")

    //- Fonte Título Site
    link(rel="preconnect", href="https://fonts.googleapis.com")

    link(rel="preconnect", href="https://fonts.gstatic.com", crossorigin="")

    link(href="https://fonts.googleapis.com/css2?family=Zain:wght@900&display=swap", rel="stylesheet")
    
    //- Fonte Texto Site
    link(href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,400;0,700;1,300;1,900&display=swap", rel="stylesheet")

  body.d-flex.flex-column-reverse.flex.vh-100.roboto-medium
    .container.my-auto#container-home-text
      h1.mx-auto.d-flex.justify-content-center.text-white Seja Bem-Vindo ao MiruYomuHub!
      h4.d-flex.justify-content-center.text-center.p-2.text-white Aqui, você pode encontrar informações sobre o seu próximo anime ou mangá favorito!
      .container.d-flex.justify-content-center.gap-2.p-2.button-container
        a(href="/cadastrarUsuario")
          button.btn.text-white.fw-bold.btn-lg.shadow
            span Cadastre-se
        a(href="/logarUsuario")
          button.btn.text-white.fw-bold.btn-lg.shadow
            span Login

    header
      nav.navbar.navbar-expand-sm.navbar-light.p-2.shadow
        a.navbar-brand.zain-black.p-2.fs-1.text-white(href="#") MiruYomuHub
        button.navbar-toggler(type="button", data-toggle="collapse", data-target="#textoNavbar", aria-controls="textoNavbar", aria-expanded="false", aria-label="Alterna navegação")
          span.navbar-toggler-icon
        .collapse.navbar-collapse#textoNavbar
          ul.navbar-nav.ms-auto
            li.nav-item.active
              button#btn-top-trends.nav-link.text-navbar-size.text-white Top Trends
            li.nav-item
              button.nav-link.corTextNavbar.text-navbar-size Animes
            li.nav-item
              button.nav-link.corTextNavbar.text-navbar-size Mangás

    //- Bootstrap JS
    script(src="https://code.jquery.com/jquery-3.3.1.slim.min.js", integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo", crossorigin="anonymous")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js", integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49", crossorigin="anonymous")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js", integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy", crossorigin="anonymous")
    //- FontAwesome
    script(src="https://kit.fontawesome.com/fd9f6f6694.js", crossorigin="anonymous")
    //- Parallax
    script(src="https://cdn.jsdelivr.net/parallax.js/1.4.2/parallax.min.js")
    //- JS da página Home
    script(src="js/index.js")